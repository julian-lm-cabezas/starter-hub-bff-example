{
  "name": "starter-hub-bff-example",
  "version": "1.0.0",
  "description": "StarterHub bff template",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "launch": "node dist/src/launcher/main",
    "start": "nest start --watch",
    "test": "jest --no-cache"
  },
  "author": "Julian Cabezas",
  "license": "ISC",
  "dependencies": {
    "@lmes/bff-boot": "^1.3.0",
    "@lmes/bff-logger": "^1.4.0",
    "@lmes/bff-pingid": "^1.3.0",
    "@nestjs/axios": "^3.0.1",
    "axios": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.(test).{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!axios)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!**/*.(entity|model|dto).ts",
      "!src/domain/config/**",
      "!src/launcher/**",
      "!**/index.ts"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./tests/coverage",
    "testEnvironment": "node"
  }
}
